<tal:ajax xmlns:tal="http://xml.zope.org/namespaces/tal"
          xmlns:ajax="http://namesspaces.bluedynamics.eu/ajax"
          omit-tag="True">
  
  <div class="contextmenu">
  
    <tal:sections repeat="section context.sections">
    
      <tal:section condition="section.display">
        <tal:actions repeat="action section.actions">
        
          <tal:action condition="action.display">
            <tal:direct condition="action.type == 'direct'">
            
              <div>
                <a href="${action.href|nothing}"
                   class="${action.css|nothing}"
                   title="${action.title|nothing}"
                   ajax:bind="${action.bind|nothing}"
                   ajax:target="${action.target|nothing}"
                   ajax:event="${action.event|nothing}"
                   ajax:action="${action.action|nothing}"
                   ajax:confirm="${action.confirm|nothing}">&nbsp;</a>
              </div>
            </tal:direct>
            
            <tal:tile condition="action.type == 'tile'">
              <tal:tile replace="structure tile(action.tile)" />
            </tal:tile>
            
          </tal:action>
        </tal:actions>
        
      </tal:section>
    </tal:sections>
  
  </div>
  
  <div style="clear:both;"></div>
  
</tal:ajax>