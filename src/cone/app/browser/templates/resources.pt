<tal:resources define="settings context.settings">

  <!-- javascripts -->
  <tal:public repeat="js settings.js.public">
    <script src="${request.application_url}/${js}"></script>
  </tal:public>

  <tal:protected
    condition="context.authenticated"
    repeat="js settings.js.protected">
    <script src="${request.application_url}/${js}"></script>
  </tal:protected>

  <!-- stylesheets -->
  <tal:public repeat="css settings.css.public">
    <link href="${request.application_url}/${css}"
          rel="stylesheet" type="text/css" media="screen" />
  </tal:public>

  <tal:protected 
    condition="context.authenticated"
    repeat="css settings.css.protected">
    <link href="${request.application_url}/${css}"
          rel="stylesheet" type="text/css" media="screen" />
  </tal:protected>

</tal:resources>